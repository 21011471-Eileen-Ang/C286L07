@model Client

@{
    ViewData["Title"] = "Update Client";
}

@section Script {
<script>
    $(document).ready(function () {
        $("form").submit(function () {
            if ($(this).valid()) {
                if (confirm("Proceed? Press OK to confirm.") === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    return false;
                };
            } else {
               alert("Please fix the invalid data");
            }

        }); // submit
     }); // ready

</script>
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-10">
        <form asp-controller="Client" asp-action="UpdateClient" method="post">

            <div class="row mb-2">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Id" class="form-control" readonly="readonly" />
                </div>
            </div>

            <partial name="_Client" />

            <div class="row mb-2">
                <div class="offset-sm-2 col-sm-10">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

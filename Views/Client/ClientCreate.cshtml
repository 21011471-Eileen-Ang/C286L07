@model Client

@{
    ViewData["Title"] = "New Client";
}

@section Script {
<script>
    $(document).ready(function () {
        $("form").submit(function () {
            if ($(this).valid()) {
                if (confirm("Proceed? Press OK to confirm.") === false) {
                    event.preventDefault();    
                    event.stopPropagation();   
                    return false;             
                };
            }
        });
    });
</script>
}
